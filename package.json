{
  "name": "tonalite",
  "version": "2.0.0",
  "description": "DMX lighting control system",
  "main": "index.js",
  "bin": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "echo \"Warning: no test specified\" && exit 0",
    "build-linux": "pkg . -t node10-linux",
    "build-win": "pkg . -t node10-win",
    "build-macos": "pkg . -t node10-macos",
    "build-docs-pdf": "cd docs && gitbook pdf . documentation.pdf && cd ../",
    "build-docs": "cd docs && gitbook build . dist/ && cd ../"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnroper100/tonalite.git"
  },
  "author": "John Roper",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/johnroper100/tonalite/issues"
  },
  "homepage": "https://github.com/johnroper100/tonalite#readme",
  "dependencies": {
    "artnet": "^1.4.0",
    "color": "^3.1.0",
    "compression": "^1.7.3",
    "drivelist": "^6.4.3",
    "e131": "^1.1.1",
    "express": "^4.16.4",
    "express-fileupload": "^1.0.0",
    "moment": "^2.22.2",
    "sanic.js": "^1.0.1",
    "serve-favicon": "^2.5.0",
    "sleep": "^5.2.3",
    "socket.io": "^2.2.0",
    "unzipper": "^0.9.4"
  },
  "devDependencies": {
    "pkg": "^4.3.5"
  },
  "pkg": {
    "assets": [
      "static/**/*",
      "docs/dist/**/*",
      "index.min.html",
      "presets.min.html",
      "open-source-licenses.txt"
    ]
  }
